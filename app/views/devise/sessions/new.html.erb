<section class="section has-background-white" style="border-bottom:1px dashed #D3D3D3">
	<div class="container">
		<div class="columns is-centered">
			<div class="container has-text-centered">
			<div class="column is-4 is-offset-4">
				<h3 class="title has-text-grey">Đăng nhập vào Jobpify</h3>
                    <p class="subtitle has-text-grey">***insert slogan***</p>
				<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
				<div class="box">
					<!--<figure class="avatar">
                        <img src="https://placehold.it/128x128">
                     </figure>-->
				  <div class="field">
				  	<div class="control">
				    	<%= f.input :email, required: true, input_html: { class: "input is-medium is-hovered"}, wrapper: false, label_html: { class: "label" }, label: "Email" %>
				    </div>
				  </div>
				  <div class="field">
				  	<div class="control">
				    	<%= f.input :password, required: true, input_html: { class: "input is-medium is-hovered"}, wrapper: false, label_html: { class: "label" }, label: "Mật khẩu" %>
					</div>
					</div>
					<div class="field">
				  	<div class="control">
				    <!--<%= f.input :remember_me, wrapper: false, label_html: { class: "label_html" }, label: "Nhớ mật khẩu", as: :boolean if devise_mapping.rememberable? %>-->
				     <%= f.input :remember_me, wrapper: false, input_html: { class: "checkbox"}, label: false, as: :boolean if devise_mapping.rememberable? %>
				    Nhớ mật khẩu
				  	</div>
					</div>
				  <%= f.button :submit, "Đăng nhập", class:"button is-outlined is-medium" %>
				  </div>
				<% end %>
				<hr />
			</div>
				<%= render "devise/shared/links" %>
			</div>
		</div>
	</div>
</section>