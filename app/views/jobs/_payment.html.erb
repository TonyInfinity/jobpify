<% if !@job.persisted? %>
  <h4 class="subtitle is-4">Thanh toán</h4>

  <div class="notification is-light has-text-centered">
    <i class="fa fa-credit-card"></i>
    Mọi công việc đăng trên Yayber sẽ tốn <strong>$5</strong> USD cho 30 ngày.
    <span class="block mb4"></span>
  </div>

  <div class="form-row">
    <label for="card-element" class="label">
      Nhập thông tin thẻ tín dụng (credit card) hoặc thẻ ghi nợ (debit card)
    </label>

    <div id="card-element" class="form-control">
      <!-- a Stripe Element will be inserted here. -->
    </div>
    <!-- used to display Element errors -->
    <div id="card-errors" role="alert"></div>
  </div>

  <% if current_user.stripe_id.present? %>
    <div class="last-card bg-light pa4 border-radius-3 mt4">
      <h5 class="is-6 title pt2">Những thẻ đã dùng trước đây</h5>
      <table class="table is-narrow bg-light is-fullwidth">
        <thead>
          <th>Loại thẻ:</th>
          <th>4 số cuối thẻ:</th>
          <th>Tháng hết hạn:</th>
          <th>Năm hết hạn:</th>
        </thead>
        <tr>
          <td><%= current_user.card_brand %></td>
          <td><%= current_user.card_last4 %></td>
          <td><%= current_user.card_exp_month %></td>
          <td><%= current_user.card_exp_year %></td>
        </tr>
      </table>
    </div>
  <% end %>
<% end %>